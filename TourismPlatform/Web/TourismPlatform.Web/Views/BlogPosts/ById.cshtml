@model TourismPlatform.Web.ViewModels.BlogPosts.SingleBlogPostViewModel
@{
    this.ViewData["Title"] = Model.Title;
}
<div class="container">
    <div>
        <h2>@this.Model.Title</h2>
    </div>

    <div class="item-figure">
        <img class="img-fluid w-95" src="@Model.ImageUrl" alt="@Model.Title" />
    </div>
    <div class="ctg-name">
        <h5>Автор: @Model.AuthorName</h5>
        <div class="row">
            <div class="">
                <p class="item-description">
                    @Model.Content
                </p>
            </div>

        </div>
    </div>
</div>
